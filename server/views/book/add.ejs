<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"> 
        <h1><%= title  %> </h1>

        <form class="form" method="post">
            <div class="form-group">
                <label for="nameTextField">Name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter your Name"
                name="name" required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Phone Number</label>
                <input type="number" class="form-control"
                id="publishedTextField"
                placeholder="Enter Phone Number"
                name="published" required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Email</label>
                <input type="text" class="form-control"
                id="authorTextField"
                placeholder="Enter Email Address"
                name="author" required>
            </div>


            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit </button>

                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>



        </form>
        </div>

    </div>   
</div>








